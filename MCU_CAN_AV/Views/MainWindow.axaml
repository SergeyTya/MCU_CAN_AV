<Window Name="MainForm"
		xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MCU_CAN_AV.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:MCU_CAN_AV.Views"
		xmlns:dd ="clr-namespace:MCU_CAN_AV.Devices"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="700"
        x:Class="MCU_CAN_AV.Views.MainWindow"
		x:DataType="vm:MainWindowModel"
        Icon="/Assets/avalonia-logo.ico"
		MinWidth="500"
		MinHeight="380"
		Height="550"
		Width="1100"
		Title="MCU CAN"
		>

	<Window.DataContext >
		<vm:MainWindowModel/>
	</Window.DataContext>
	
	<Panel>

		<views:MainView3
				
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"/>

		<views:ConnectionView
				Name="ConnectionView"
				IsVisible="{Binding ConnectionDone}"
				Grid.Row="0"
				Background="Black" />


	</Panel>
</Window>
