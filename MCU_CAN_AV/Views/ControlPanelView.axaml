	<Panel Margin="1" IsVisible="{Binding IsVisible}">
		<StackPanel Spacing="1" Orientation="Vertical">
			
			<Button Command="{Binding ClickDisconnectCommand}"  ToolTip.Tip="Disconnect">

				<Button.DataContext>
					<vm:ConnectionViewModel/>
				</Button.DataContext>
				
