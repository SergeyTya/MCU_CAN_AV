					<PathIcon  Data="{StaticResource record_regular}"/>
				</Panel>
			</ToggleButton>

			<ToggleButton Name="TB_UnlockControl" IsChecked="{Binding IsControlsDisabled}" ToolTip.Tip="Lock/Unlock control">
