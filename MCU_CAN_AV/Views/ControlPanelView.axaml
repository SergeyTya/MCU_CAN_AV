					<PathIcon  Data="{StaticResource plug_disconnected_regular}"/>
				</Panel>
				
			</Button>

			<ToggleButton IsChecked="{Binding DeviceLogerState, Mode=OneWayToSource}"  ToolTip.Tip="Start/Stop Record">
